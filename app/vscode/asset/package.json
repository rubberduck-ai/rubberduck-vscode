{
  "publisher": "rubberduck",
  "name": "rubberduck-vscode",
  "version": "0.0.9",
  "displayName": "Rubberduck - GPT-3 powered code chat",
  "description": "Code explanations, chat, and unit test generation powered by OpenAI's GPT-3 API.",
  "keywords": [
    "ai",
    "gpt",
    "openai",
    "chatgpt",
    "codex",
    "copilot",
    "code explanation"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Data Science",
    "Machine Learning",
    "Education",
    "Testing"
  ],
  "icon": "media/extension-icon.png",
  "galleryBanner": {
    "color": "#111827",
    "theme": "dark"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "vscode": "^1.72.0"
  },
  "homepage": "https://github.com/rubberduck-ai/rubberduck-vscode",
  "repository": "https://github.com/rubberduck-ai/rubberduck-vscode",
  "bugs": "https://github.com/rubberduck-ai/rubberduck-vscode/issues",
  "extensionKind": [
    "workspace"
  ],
  "main": "./extension/dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "rubberduck.enterOpenAIApiKey",
        "category": "Rubberduck",
        "title": "Enter OpenAI API key"
      },
      {
        "command": "rubberduck.clearOpenAIApiKey",
        "category": "Rubberduck",
        "title": "Clear OpenAI API key"
      },
      {
        "command": "rubberduck.startChat",
        "title": "Start chat",
        "category": "Rubberduck",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "rubberduck.explainCode",
        "title": "Explain code",
        "category": "Rubberduck",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "rubberduck.writeTest",
        "title": "Write test",
        "category": "Rubberduck",
        "icon": "$(beaker)"
      },
      {
        "command": "rubberduck.touchBar.startChat",
        "category": "Rubberduck",
        "title": "ðŸ’¬"
      }
    ],
    "keybindings": [
      {
        "command": "rubberduck.startChat",
        "when": "isMac",
        "key": "Cmd+y"
      },
      {
        "command": "rubberduck.startChat",
        "when": "!isMac",
        "key": "Ctrl+y"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "rubberduck.touchBar.startChat",
          "group": "rubberduck"
        }
      ],
      "commandPalette": [
        {
          "command": "rubberduck.touchBar.startChat",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "rubberduck.explainCode",
          "group": "rubberduck",
          "when": "editorHasSelection"
        },
        {
          "command": "rubberduck.writeTest",
          "group": "rubberduck",
          "when": "editorHasSelection"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rubberduck",
          "title": "Rubberduck",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "rubberduck": [
        {
          "id": "rubberduck.chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  }
}
